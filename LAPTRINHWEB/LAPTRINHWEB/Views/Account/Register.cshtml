@model LAPTRINHWEB.Models.User
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h3><i class="fas fa-user-plus"></i> Đăng ký tài khoản</h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" style="display: none;"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">
                            <i class="fas fa-user"></i> Tên người dùng
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="Nhập tên người dùng (3-50 ký tự)" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Nhập địa chỉ email hợp lệ" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock"></i> Mật khẩu
                        </label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu (tối thiểu 6 ký tự)" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="fas fa-lock"></i> Xác nhận mật khẩu
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus"></i> Đăng ký
                        </button>
                        <a asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt"></i> Đã có tài khoản? Đăng nhập
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Hiển thị validation summary khi có lỗi
        $(document).ready(function() {
            if ($('.validation-summary-errors').length > 0) {
                $('.alert-danger').show();
            }
        });
    </script>
}