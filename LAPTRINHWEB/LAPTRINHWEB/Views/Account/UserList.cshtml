@model IEnumerable<LAPTRINHWEB.Models.User>
@{
    ViewData["Title"] = "Danh sách người dùng";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h3><i class="fas fa-users"></i> Danh sách người dùng đã đăng ký</h3>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>STT</th>
                                    <th><i class="fas fa-user"></i> Tên người dùng</th>
                                    <th><i class="fas fa-envelope"></i> Email</th>
                                    <th><i class="fas fa-calendar"></i> Ngày đăng ký</th>
                                    <th><i class="fas fa-info-circle"></i> Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>
                                            <strong>@user.Username</strong>
                                        </td>
                                        <td>@user.Email</td>
                                        <td>@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @if (Context.Session.GetString("Username") == user.Username)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Đang đăng nhập
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-user-clock"></i> Đã đăng ký
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                    index++;
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Tổng số người dùng:</strong> @Model.Count() người
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <i class="fas fa-exclamation-triangle"></i>
                        <h5>Chưa có người dùng nào đăng ký</h5>
                        <p>Hiện tại chưa có ai đăng ký tài khoản trong hệ thống.</p>
                        <a asp-action="Register" class="btn btn-primary">
                            <i class="fas fa-user-plus"></i> Đăng ký ngay
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>