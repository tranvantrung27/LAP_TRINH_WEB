@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(rgba(30, 58, 138, 0.8), rgba(59, 130, 246, 0.8)), url('/images/university-bg.jpg') center/cover;
        color: white;
        padding: 100px 0;
        text-align: center;
        margin: -40px -15px 40px;
    }

    .hero-content h1 {
        font-size: 3.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        animation: slideDown 0.8s ease-out;
    }

    .hero-content p {
        font-size: 1.3rem;
        margin-bottom: 30px;
        animation: slideUp 0.8s ease-out;
    }

    .hero-buttons {
        animation: fadeIn 1s ease-out 0.5s both;
    }

        .hero-buttons .btn {
            margin: 0 10px;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

    .btn-primary-custom {
        background-color: #f59e0b;
        border: none;
        color: white;
    }

        .btn-primary-custom:hover {
            background-color: #d97706;
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(245, 158, 11, 0.4);
        }

    .btn-outline-light:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 20px rgba(255, 255, 255, 0.3);
    }

    /* Features Section */
    .features-section {
        padding: 60px 0;
        background-color: #f8fafc;
    }

    .section-title {
        text-align: center;
        margin-bottom: 50px;
    }

        .section-title h2 {
            font-size: 2.5rem;
            color: #1e3a8a;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .section-title p {
            color: #6b7280;
            font-size: 1.2rem;
        }

    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        height: 100%;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

    .feature-icon {
        font-size: 3rem;
        color: #3b82f6;
        margin-bottom: 20px;
    }

    .feature-card h4 {
        color: #1e3a8a;
        margin-bottom: 15px;
        font-weight: bold;
    }

    /* Stats Section */
    .stats-section {
        background: linear-gradient(to right, #1e3a8a, #3b82f6);
        color: white;
        padding: 60px 0;
    }

    .stat-item {
        text-align: center;
        padding: 20px;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: bold;
        display: block;
        margin-bottom: 10px;
    }

    .stat-label {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    /* News Section */
    .news-section {
        padding: 60px 0;
    }

    .news-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        margin-bottom: 30px;
    }

        .news-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

    .news-image {
        height: 200px;
        background: #e5e7eb;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #9ca3af;
    }

    .news-content {
        padding: 20px;
    }

    .news-date {
        color: #6b7280;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .news-title {
        color: #1e3a8a;
        font-weight: bold;
        margin-bottom: 10px;
    }

    /* Animations */
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2.5rem;
        }

        .hero-buttons .btn {
            display: block;
            width: 200px;
            margin: 10px auto;
        }

        .stat-item {
            margin-bottom: 30px;
        }
    }
</style>

