@model LAPTRINHWEB.Models.Book

@{
    ViewData["Title"] = Model.Title;
}

<div class="book-details-container">
    <div class="row">
        <div class="col-md-4">
            <div class="book-image-large">
                <img src="~/images/books/@(Model.Image ?? "default-book.jpg")"
                     alt="@Model.Title"
                     class="img-fluid"
                     onerror="this.src='/images/books/default-book.jpg'">
            </div>
        </div>
        <div class="col-md-8">
            <div class="book-info-detailed">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Book" asp-action="Index">Thư viện</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Book" asp-action="ByCategory" asp-route-id="@Model.CategoryId">
                                @Model.Category.CategoryName
                            </a>
                        </li>
                        <li class="breadcrumb-item active">@Model.Title</li>
                    </ol>
                </nav>

                <h1 class="book-title-detail">@Model.Title</h1>

                <div class="book-meta">
                    <p class="author">
                        <i class="fas fa-user"></i>
                        <strong>Tác giả:</strong> @Model.Author
                    </p>
                    <p class="category">
                        <i class="fas fa-tag"></i>
                        <strong>Thể loại:</strong> @Model.Category.CategoryName
                    </p>
                    <p class="price">
                        <i class="fas fa-dollar-sign"></i>
                        <strong>Giá bán:</strong>
                        <span class="price-value">@Model.Price.ToString("N0") VND</span>
                    </p>
                </div>

                <div class="book-description">
                    <h4>Mô tả:</h4>
                    <p>@(Model.Description ?? "Chưa có mô tả cho cuốn sách này.")</p>
                </div>

                <div class="book-actions-detail">
                    <button class="btn btn-success btn-lg">
                        <i class="fas fa-shopping-cart"></i> Đặt mua
                    </button>
                    <button class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-heart"></i> Yêu thích
                    </button>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .book-details-container {
        margin-top: 20px;
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .book-image-large {
        text-align: center;
        margin-bottom: 20px;
    }

        .book-image-large img {
            max-height: 400px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

    .book-title-detail {
        color: #1e3a8a;
        font-size: 2.2rem;
        font-weight: bold;
        margin-bottom: 20px;
        line-height: 1.3;
    }

    .book-meta {
        background: #f8fafc;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 25px;
    }

        .book-meta p {
            margin-bottom: 12px;
            font-size: 1.1rem;
        }

        .book-meta i {
            color: #3b82f6;
            width: 20px;
        }

    .price-value {
        color: #dc2626;
        font-size: 1.3rem;
        font-weight: bold;
    }

    .book-description {
        margin-bottom: 30px;
    }

        .book-description h4 {
            color: #1e3a8a;
            margin-bottom: 15px;
        }

        .book-description p {
            font-size: 1.05rem;
            line-height: 1.6;
            color: #374151;
        }

    .book-actions-detail {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

        .book-actions-detail .btn {
            padding: 12px 25px;
            font-weight: 600;
        }

    @@media (max-width: 768px) {
        .book-title-detail

    {
        font-size: 1.8rem;
    }

    .book-actions-detail {
        flex-direction: column;
    }

        .book-actions-detail .btn {
            width: 100%;
        }

    }
</style>