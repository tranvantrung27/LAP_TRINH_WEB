@model LAPTRINHWEB.Models.Student

@{
    ViewData["Title"] = "Đăng ký chuyên ngành";
}

<style>
    .registration-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
    }

        .form-header h2 {
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 15px;
            font-size: 2.5rem;
        }

        .form-header p {
            color: #7f8c8d;
            font-size: 1.1rem;
        }

    .form-control {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 20px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
            transform: translateY(-2px);
        }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        font-size: 1.1rem;
    }

    .btn-register {
        background: linear-gradient(to right, #3498db, #2980b9);
        color: white;
        border: none;
        border-radius: 50px;
        padding: 12px 40px;
        font-size: 18px;
        font-weight: bold;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 20px;
    }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(52, 152, 219, 0.4);
        }

    .form-group {
        margin-bottom: 25px;
    }

    .icon-input {
        position: relative;
    }

        .icon-input i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #7f8c8d;
        }

        .icon-input .form-control {
            padding-left: 45px;
        }

    .major-select {
        background-color: white;
        cursor: pointer;
    }

    .validation-summary-errors {
        background-color: #fee;
        border: 1px solid #fcc;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .text-danger {
        color: #e74c3c !important;
        font-size: 14px;
        margin-top: 5px;
    }

    @@media (max-width: 768px) {
        .registration-container {
            padding: 20px;
        }
    }
</style>

<div class="container mt-5">
    <div class="registration-container">
        <div class="form-header">
            <h2><i class="fas fa-graduation-cap"></i> Đăng Ký Chuyên Ngành</h2>
            <p>Khoa CNTT - Chọn chuyên ngành phù hợp với đam mê của bạn</p>
        </div>

        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="text-center mb-4">
                <a href="@Url.Action("List")" class="btn btn-info" style="border-radius: 50px;">
                    <i class="fas fa-list"></i> Xem danh sách đã đăng ký
                </a>
            </div>

            <div class="form-group">
                <label asp-for="MSSV" class="form-label">
                    <i class="fas fa-id-card"></i> @Html.DisplayNameFor(model => model.MSSV)
                </label>
                <div class="icon-input">
                    <i class="fas fa-user"></i>
                    <input asp-for="MSSV" class="form-control" placeholder="Nhập mã số sinh viên" />
                </div>
                <span asp-validation-for="MSSV" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoTen" class="form-label">
                    <i class="fas fa-user-tag"></i> @Html.DisplayNameFor(model => model.HoTen)
                </label>
                <div class="icon-input">
                    <i class="fas fa-signature"></i>
                    <input asp-for="HoTen" class="form-control" placeholder="Nhập họ và tên đầy đủ" />
                </div>
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DiemTB" class="form-label">
                    <i class="fas fa-chart-line"></i> @Html.DisplayNameFor(model => model.DiemTB)
                </label>
                <div class="icon-input">
                    <i class="fas fa-star"></i>
                    <input asp-for="DiemTB" class="form-control" type="number" step="0.1" placeholder="Nhập điểm trung bình" />
                </div>
                <span asp-validation-for="DiemTB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChuyenNganh" class="form-label">
                    <i class="fas fa-book"></i> @Html.DisplayNameFor(model => model.ChuyenNganh)
                </label>
                <div class="icon-input">
                    <i class="fas fa-list"></i>
                    <select asp-for="ChuyenNganh" class="form-control major-select">
                        <option value="">-- Chọn chuyên ngành yêu thích --</option>
                        <option value="CNPM">💻 Công nghệ phần mềm (CNPM)</option>
                        <option value="HTTT">📊 Hệ thống thông tin (HTTT)</option>
                        <option value="ANM">🔒 An ninh mạng (ANM)</option>
                        <option value="TTNT">🤖 Trí tuệ nhân tạo (TTNT)</option>
                        <option value="MMT">🌐 Mạng máy tính (MMT)</option>
                    </select>
                </div>
                <span asp-validation-for="ChuyenNganh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-register">
                    <i class="fas fa-paper-plane"></i> Gửi đăng ký
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}