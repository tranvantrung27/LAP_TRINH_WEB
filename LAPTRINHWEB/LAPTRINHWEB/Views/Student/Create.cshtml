@model LAPTRINHWEB.Models.SinhVien

@{
    ViewData["Title"] = "Thêm Sinh Viên";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="MaSV"></label>
        <input asp-for="MaSV" class="form-control" />
        <span asp-validation-for="MaSV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HoTen"></label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GioiTinh"></label>
        <input asp-for="GioiTinh" class="form-control" />
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NgaySinh"></label>
        <input asp-for="NgaySinh" class="form-control" type="date" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hinh">Hình ảnh</label>
        <input asp-for="Hinh" class="form-control" type="file" />
        <span asp-validation-for="Hinh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaNganh"></label>
        <select asp-for="MaNganh" class="form-control" asp-items="ViewBag.MaNganh">
            <option value="">-- Chọn Ngành --</option>
        </select>
        <span asp-validation-for="MaNganh" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Quay lại</a>
</form>
