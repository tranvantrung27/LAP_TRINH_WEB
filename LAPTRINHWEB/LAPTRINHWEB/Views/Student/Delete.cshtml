@model LAPTRINHWEB.Models.SinhVien

<h2>Xác Nhận Xóa Sinh Viên</h2>

<div>
    <h4>@Model.HoTen</h4>
    <p><strong>Mã Sinh Viên:</strong> @Model.MaSV</p>
    <p><strong>Giới Tính:</strong> @Model.GioiTinh</p>
    <p><strong>Ngày Sinh:</strong> @Model.NgaySinh.ToString("dd/MM/yyyy")</p>
    <p><strong>Ngành:</strong> @Model.MaNganh</p>
    <p><strong>Hình:</strong> <img src="@Model.Hinh" alt="Image" width="100" height="100" /></p>

    <form method="post">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
