@model LAPTRINHWEB.Models.SinhVien

@{
    ViewData["Title"] = "Sửa Sinh Viên";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaSV" />
    <input type="hidden" asp-for="Hinh" /> @* Giữ lại đường dẫn hình cũ *@

    <div class="form-group">
        <label asp-for="HoTen">Họ Tên</label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GioiTinh">Giới Tính</label>
        <input asp-for="GioiTinh" class="form-control" />
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgaySinh">Ngày Sinh</label>
        <input asp-for="NgaySinh" class="form-control" type="date" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hình hiện tại</label><br />
        @if (!string.IsNullOrEmpty(Model.Hinh))
        {
            <img src="@Model.Hinh" style="max-width: 200px;" class="mb-2" />
        }
        <input type="file" name="HinhMoi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MaNganh">Ngành</label>
        <select asp-for="MaNganh" class="form-control" asp-items="ViewBag.MaNganh">
            <option value="">-- Chọn Ngành --</option>
        </select>
        <span asp-validation-for="MaNganh" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
